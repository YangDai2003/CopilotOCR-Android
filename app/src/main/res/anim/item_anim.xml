<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="300">
    <!-- 缩放动画，从0.5倍到1倍 -->
    <scale
        android:fromXScale="0.8"
        android:fromYScale="0.8"
        android:toXScale="1"
        android:toYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"/>

    <!-- 透明度动画，从0到1 -->
    <alpha
        android:fromAlpha="0.4"
        android:toAlpha="1" />
</set>